files:
  "/etc/nginx/conf.d/types_hash_fix.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      types_hash_max_size 2048;
      types_hash_bucket_size 128;

  "/etc/nginx/conf.d/log_format_fix.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      log_format main '$time_iso8601 $remote_addr $request ...';
